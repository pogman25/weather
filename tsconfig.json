{
    "compilerOptions": {
        "outDir": "./build/",
        "rootDir": "./src/",
        "baseUrl": "./",
        "paths": {
            "src/*": ["./src/*"]
        },
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "jsx": "react",
        "lib": ["dom", "es7", "es2018", "scripthost"],
        "noUnusedLocals": true /* Report errors on unused locals. */
        //"noUnusedParameters": true            /* Report errors on unused parameters. */
    },
    "exclude": ["node_modules"],
    "include": ["./src/*"],
    "files": ["./src/index.tsx"]
}
