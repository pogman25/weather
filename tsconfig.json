{
    "compilerOptions": {
        "outDir": "./build/",
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es7",
            "es2018",
            "scripthost"
        ],
        "noUnusedLocals": true                 /* Report errors on unused locals. */
        //"noUnusedParameters": true            /* Report errors on unused parameters. */
    },
    "exclude": [
        "node_modules"
    ],
    "files": [
        "./src/index.tsx"
    ]
}
